---
import languages from '@/i18n/languages';
import { useTranslations } from '@/i18n/utils';

export const getStaticPaths = () => Object.keys(languages).map(lang => ({ params: { lang } }));

const pathname = Astro.canonicalURL.pathname;
const lang = pathname.split("/")[1];
const isNotLang = !languages[lang]
---

<div>
    {
        isNotLang ?
        <meta http-equiv="refresh" content={`0;url=/en/${pathname.replace("/", '' )}`} /> : <p>
            {"404"}</p>
    }
</div>


