---
import languages from "@/i18n/languages";
import SEO from "@/components/SEO/index.astro";

export const getStaticPaths = async () => {
  let mdPosts: any = [];
  let mdxPosts: any = [];
  try {
    mdPosts = await Astro.glob("../../../articles/*.md");
  } catch {}
  try {
    mdxPosts = await Astro.glob("../../../articles/*.mdx");
  } catch {}

  let posts: any[] = [...(mdPosts || []), ...(mdxPosts || [])];

  return Object.keys(languages).map((lang) => {
    let obj = {};

    posts.forEach((post) => {
      obj = {
        params: {
          slug: post.file
            .substring(post.file.lastIndexOf("/") + 1)
            .split(".")[0],
          lang: lang,
        },
        props: {
          post,
        },
      };
    });

    return obj;
  });
};

const { Content } = Astro.props.post;
const { frontmatter } = Astro.props.post;
---

<SEO
  title={`GDLauncher - Article - ${frontmatter.title}`}
  description={frontmatter.description}
/>
<article>
  <Content />
</article>
