---
import Button from "@/components/Button";
import Icon from "@/components/Icon";
import languages from "@/i18n/languages";
import { useTranslations } from "@/i18n/utils";
import CaretDown from "~icons/mdi/caret-down";
import SimpleWrapper from "@/layouts/SimpleWrapper.astro";

export const getStaticPaths = () => Object.keys(languages).map(lang => ({ params: { lang } }));

const t = useTranslations(Astro);
---

<SimpleWrapper>
    <div class="h-[calc(100vh*7)] relative snap-mandatory snap-y">
        <div class="relative flex flex-col justify-center items-center pt-1 box-border h-screen snap-center">
            <div class="absolute top-0 bottom-0 left-0 right-0">
                <div class="absolute top-0 bottom-0 left-0 right-0 z-10 opacity-95 bg-slate-900"></div>
                <img class="z-10 h-full" src="https://cdn.gdlauncher.com/assets/mc_panda.webp" alt="mc_panda" />
            </div>
            <div
                class="w-4/5 lg:w-full z-20 flex flex-col-reverse lg:flex-row justify-between items-center gap-20 max-w-7xl mt-10 sm:mt-60">
                <div class="py-0 px-4 max-w-2xl">
                    <h3 class="text-5xl lg:text-8xl mb-2 font-bold">{t("home.title")}</h3>
                    <p class="text-xl mb-12 font-light">
                        {t(
                        "launcher.mockup.description",
                        )}
                    </p>
                    <Button>{t("navbar.download")}</Button>
                </div>
                <div>
                    <img class="w-full" src="https://cdn.gdlauncher.com/assets/launcher_mockup.webp"
                        alt="launcher_mockup" />
                </div>
            </div>
            <Icon icon={CaretDown} class="relative z-20 my-12 text-5xl" />
        </div>
        <div class="h-auto md:h-screen pt-52 snap-center">
            <div
                class="w-full lg:w-4/5 z-20 flex flex-col-reverse lg:flex-row-reverse justify-between items-center gap-20 max-w-7xl relative">
                <div class="py-0 px-4">
                    <h3 class="text-5xl lg:text-7xl mb-10 font-bold">{t("home.createYourOwn")}</h3>
                    <ul class="createYourOwn px-8 lg:pl-4 lg:pr-0">
                        <li class="mb-10 text-xl pl-5">
                            {t(
                            "home.createYourOwn_text1",
                            )}
                        </li>
                        <li class="mb-10 text-xl pl-5">
                            {t(
                            "home.createYourOwn_text2",
                            )}
                        </li>
                        <li class="mb-10 text-xl pl-5">
                            {t(
                            "home.createYourOwn_text3",
                            )}
                        </li>
                    </ul>
                    <Button>{t("navbar.download")}</Button>
                </div>
                <div class="w-full">
                    <img class="w-4/5 lg:w-full" src="https://cdn.gdlauncher.com/assets/create_your_own.svg"
                        alt="create_your_own" />
                </div>
            </div>
        </div>

    </div>
</SimpleWrapper>

<style lang="scss">
    .createYourOwn {

        li {
            list-style-image: url("https://cdn.gdlauncher.com/assets/hexagon_orange.svg");
        }

        li:first-child {

            list-style-image: url("https://cdn.gdlauncher.com/assets/hexagon_teal.svg");
        }

        li:last-child {

            list-style-image: url("https://cdn.gdlauncher.com/assets/hexagon_yellow.svg");
        }
    }
</style>