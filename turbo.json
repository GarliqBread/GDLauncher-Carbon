{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "core.node"]
    },
    "@gd/desktop#build": {
      "cache": false
    },
    "@gd/desktop#dev": {
      "dependsOn": ["^@gd/core#dev", "^@gd/ui#build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev": {
      "outputs": ["dist/**"]
    }
  },
  "globalDependencies": [
    ".env"
  ]
}
