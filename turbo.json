{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "core.node"]
    },
    "@gd/desktop#build": {
      "dependsOn": ["^@gd/ui#build"],
      "cache": false
    },
    "@gd/desktop#dev": {
      "dependsOn": ["^@gd/core#dev", "^@gd/ui#build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev": {
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    }
  },
  "globalDependencies": [".env"]
}
